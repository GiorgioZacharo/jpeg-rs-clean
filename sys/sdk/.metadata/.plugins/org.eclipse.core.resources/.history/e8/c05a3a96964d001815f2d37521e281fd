#include <stdio.h>
#include <stdlib.h>

#include "platform.h"
#include "xil_printf.h"

#include "init.h"
#include "jpeg2bmp.h"
#include <xtime_l.h>

double get_elapsed_time(XTime start, XTime stop)
{
        return 1.0 * (stop - start) / (COUNTS_PER_SECOND);
}

int
main ()
{
	init_platform();
	printf("INFO: Run JPEG-RS\n");

	main_result = 0;
	XTime start, stop;

//	    // No need to Flush or Invalidate the cache with ACP
//	     Xil_DCacheDisable();

	XTime_GetTime(&start);
	jpeg2bmp_main ();
	XTime_GetTime(&stop);


	double elapsed = get_elapsed_time(start, stop);
	printf ("INFO: JPEG-RS result %d\n", main_result);
	printf("INFO: Execution time (secs): %f\n", elapsed);

	cleanup_platform();
	return main_result;
}



